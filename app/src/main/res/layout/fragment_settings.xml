<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.rider.PhoneLoginActivity" >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_profile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_placeholder"
        app:civ_border="true"
        app:civ_border_color="@color/circular_border"
        app:civ_border_width="2dp"
        app:civ_shadow="true" />

    <TextView
        android:id="@+id/tv_fname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_profile"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="sdf"
        android:textColor="@color/tv_label"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_lname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fname"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="sdf"
        android:textColor="@color/tv_label"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lname"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="sdf"
        android:textColor="@color/tv_label"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_referral_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="sdf"
        android:textColor="@color/tv_label"
        android:textSize="16sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_payout_settings"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#514F4F"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_payout_settings"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>