<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/ic_card_bg" >

    <ImageView
        android:id="@+id/ic_restaurant_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_food_dining" />

    <TextView
        android:id="@+id/tv_restaurant_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ic_restaurant_icon"
        android:layout_toLeftOf="@+id/ic_next"
        android:layout_toRightOf="@+id/ic_restaurant_icon"
        android:layout_toStartOf="@+id/ic_next"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="Hotel Supreme Hotel Supreme Hotel Supreme Hotel Supreme"
        android:textColor="@color/tv_label"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_restaurant_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_restaurant_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ic_restaurant_icon"
        android:layout_toLeftOf="@+id/ic_next"
        android:layout_toRightOf="@+id/ic_restaurant_icon"
        android:layout_toStartOf="@+id/ic_next"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="Madurai near railway junction"
        android:textColor="@color/tv_label"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_restaurant_icon"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="3.1 miles away"
        android:textColor="@color/tv_label"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_delivery_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ic_restaurant_icon"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@+id/ic_next"
        android:layout_toStartOf="@+id/ic_next"
        android:text="$5 delivery fee"
        android:textColor="@color/tv_label"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ic_next"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_next" />

</RelativeLayout>