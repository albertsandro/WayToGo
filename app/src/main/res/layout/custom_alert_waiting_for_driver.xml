<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.rider.PhoneLoginActivity" >

    <ProgressBar
        android:id="@+id/progress_circular"
        style="?android:attr/progressBarStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/tv_waiting_driver"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/progress_circular"
        android:layout_toRightOf="@+id/progress_circular"
        android:text="@string/tv_waiting_driver"
        android:textColor="#737373"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_cancel_driver"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_waiting_driver"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/progress_circular"
        android:layout_toRightOf="@+id/progress_circular"
        android:text="@string/tv_cancel_driver"
        android:textColor="#737373"
        android:textSize="16sp" />

</RelativeLayout>